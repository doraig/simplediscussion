<h2>Topics</h2>
<div>
  <div>
    <ul class="collection">
    <%= for topic <- @topics do %>
    <li class="collection-item">
      <div class="list">
      <div class="list-block">

      <%= topic.title%>
      </div>
      <div class="fixed-action-btn horizontal click-to-toggle" style="top: -5px; bottom: 1px; position: absolute;">
         <a class="btn-floating btn-large waves-effect waves-light light-blue"><i class="material-icons">menu</i></a>
         <ul>
            <li>
              <%= link to: topic_path(@conn, :edit, topic), class:  "btn-floating waves-effect waves-light green pulse" do %>
                <i class="material-icons">mode_edit</i>
              <% end %>
            </li>
            <li>
            <%= link to: topic_path(@conn, :delete, topic), class: "btn-floating waves-effect waves-light red pulse", method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
            </li>
         </ul>
       </div>
    </div>
    </li>
    <% end %>
    </ul>


  </div>
  <div class="right-align">
    <%= link to: topic_path(@conn, :new), class: "btn-floating btn-large waves-effect waves-light red pulse" do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>
